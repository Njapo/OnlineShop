<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop_Web</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome Icons for better design -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        .navbar-custom {
            background-color: #1f3c88; /* Dark Blue */
            padding: 15px;
        }

            .navbar-custom .navbar-brand {
                color: #fff;
                font-size: 24px;
                font-weight: bold;
            }

            .navbar-custom .nav-link {
                color: #fff !important;
                font-size: 18px;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffd700 !important; /* Gold on hover */
                }

            .navbar-custom .fa {
                margin-right: 8px;
            }

        .btn-signup {
            background-color: #ffd700; /* Gold button */
            color: #1f3c88;
            border-radius: 20px;
            font-size: 16px;
            padding: 10px 20px;
        }

            .btn-signup:hover {
                background-color: #ffcc00;
                color: #fff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <i class="fas fa-store"></i> OnlineShop
                </a>

                <!-- Mobile toggle button -->
                <button class="navbar-toggler" type="button" onclick="window.location.href='@Url.Action("IndexItem", "Item")';" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Item" asp-action="IndexItem"><i class="fas fa-home"></i> Home</a>
                        </li>
                    </ul>

                    <!-- Sign In / Sign Up or Profile Button -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("IsLoggedIn") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Profile"><i class="fas fa-user"></i> Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-signup" asp-controller="Auth" asp-action="Register"><i class="fas fa-user-plus"></i> Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <!-- Main content goes here -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- This is where your page content will be injected -->
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OnlineShop_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false) <!-- Add this line to render the Scripts section -->

</body>
</html>
