@model List<OnlineShop_Web.Models.ItemDTO>
@{
    ViewData["Title"] = "Products";
    var apiBaseUrl = "https://localhost:7002";  // Base URL for your API project
}

<h2 class="text-center">@ViewData["Title"]</h2>

<!-- Table to display items -->
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Item Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@String.Format("{0:C}", item.Price)</td> <!-- Formats as currency -->
                    <td>@item.Quantity</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PhotoUrl))
                        {
                            <!-- Use the API base URL to reference the image -->
                            <img src="@($"{apiBaseUrl}{item.PhotoUrl}")"
                                 alt="@item.Name" class="img-thumbnail"
                                 style="max-width: 100px; max-height: 100px;" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                    <td>
                        <!-- Action buttons -->
                        <a href="/Items/Details/@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a href="/Items/Edit/@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Items/Delete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No items found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <!-- Updated link to point to the CreateItem action -->
    <a href="@Url.Action("CreateItem", "Item")" class="btn btn-primary">Add New Item</a>
</div>